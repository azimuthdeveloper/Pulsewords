# Build stage
FROM node:22 AS build
WORKDIR /app

# Copy package files
COPY package*.json ./
RUN npm install

# Copy source code
COPY . .

# Build the Angular app
RUN npm run build

# Final stage
FROM nginx:alpine
COPY --from=build /app/dist/pulseword/browser /usr/share/nginx/html
# Angular apps need a custom nginx config to handle client-side routing
COPY <<EOF /etc/nginx/conf.d/default.conf
server {
    listen 80;
    server_name localhost;
    root /usr/share/nginx/html;
    index index.html;

    location / {
        try_files \$uri \$uri/ /index.html;
    }

    # Proxy API requests if needed, but here we expect API_URL to be used by the client
    # or the client to talk directly to the api service via the port mapping in dev,
    # or via the service name in docker network.
}
EOF

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
